---
layout: 'layout.njk'
---
{% block css %}
<link rel="stylesheet" href="/css/blog.css">
{% endblock %}

<section class="blog blog--rtl arabic">
  <h1 class="blog__heading">المدونة العربية</h1>
  <ul class="blog__posts-list">
    {% for post in collections.arabicPost | reverse %}
      <li class="blog__posts-list-item">
        <a href="{{post.url}}">{{post.data.title}}</a>
        <small>{{post.date | formatDate }}</small>
      </li>
    {% endfor %}
  </ul>
</section>